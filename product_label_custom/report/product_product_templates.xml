		<template id="report_simple_label_custom">
			<div style="width: 100%;height:100% !important;">
				<table class="table" style="border: 1px solid black;">
					<tr>
						<th class="table-active text-left" style="border:0; margin:0;width: 100%; height: 4rem;">
							<strong t-esc="product.name.replace('\n', ' ')"/>
							<br/>
						</th>

					</tr>
					<tr>
						<td style="height: 2rem">
							<strong>Price:</strong>
							<strong t-field="product.lst_price"
									t-options="{'widget': 'monetary', 'display_currency': product.company_id.currency_id}"/>
						</td>
					</tr>
					<tr>
						<td class="text-center align-middle">
							<t t-if="product.barcode">
								<img alt="Barcode" t-if="len(product.barcode) == 13"
									 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 600, 150)"
									 style="width:100%;height:10%;"/>
								<img alt="Barcode" t-elif="len(product.barcode) == 8"
									 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', product.barcode, 600, 150)"
									 style="width:100%;height:10%;"/>
								<img alt="Barcode" t-else=""
									 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 600, 150)"
									 style="width:100%;height:10%;"/>
								<span t-field="product.barcode"/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>

					</tr>
				</table>

			</div>
		</template>


		<template id="report_product_label">
			<t t-call="web.basic_layout">
				<div class="page">
					<t t-foreach="docs" t-as="product">
						<t t-call="product_label_custom.report_simple_label_custom">
							<t t-set="product" t-value="product"/>
						</t>
					</t>
				</div>
			</t>
		</template>


		<template id="report_product_template_label">
			<t t-call="web.basic_layout">
				<div class="page">
					<t t-foreach="docs" t-as="template">
						<t t-foreach="template.product_variant_ids" t-as="product">
							<t t-call="product_label_custom.report_simple_label_custom">
								<t t-set="product" t-value="product"/>
							</t>
						</t>
					</t>
				</div>
			</t>
		</template>


		<record id="paperformat_barcode" model="report.paperformat">
			<field name="name">Product Barcode</field>
			<field name="default" eval="True"/>
			<field name="format">custom</field>
			<field name="page_height">67</field>
			<field name="page_width">45</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">0</field>
			<field name="margin_bottom">0</field>
			<field name="margin_left">0</field>
			<field name="margin_right">0</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">0</field>
			<field name="dpi">80</field>

		</record>


		<record id="report_product_label_25x37" model="ir.actions.report">
			<field name="name">Product labels Custom</field>
			<field name="model">product.product</field>
			<field name="report_type">qweb-pdf</field>
			<field name="binding_model_id" eval="False"/>
			<field name="report_name">product_label_custom.report_product_label</field>
			<field name="report_file">product_label_custom.report_product_label</field>
			<field name="binding_type">report</field>
			<field name="paperformat_id" ref="product_label_custom.paperformat_barcode"/>
		</record>


		<record id="report_product_tem_label_25x37" model="ir.actions.report">
			<field name="name">Product labels Custom</field>
			<field name="model">product.template</field>
			<field name="report_type">qweb-pdf</field>
			<field name="binding_model_id" eval="False"/>
			<field name="report_name">product_label_custom.report_product_label</field>
			<field name="report_file">product_label_custom.report_product_label</field>
			<field name="binding_type">report</field>
			<field name="paperformat_id" ref="product_label_custom.paperformat_barcode"/>
		</record>


